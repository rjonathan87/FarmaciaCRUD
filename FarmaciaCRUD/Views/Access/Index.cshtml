
@{
    Layout = "~/Views/Shared/_LayoutAccess.cshtml";
}

<div class="col-sm-6 col-sm-offset-3 text-center" style="padding-top: 20px;">
    <img class="" src="~/Content/Images/farmacia.png" alt="Logo Farmacia" width="200" height="200">
    <h1>Iniciar sesi&oacute;n</h1>

    <form id="frmLogin" action="/Access/Login" method="post">
       
        <div class="form-group">
            <label for="_user">Usuario</label>
            <input 
                type="text" 
                class="form-control" 
                id="_user" 
                name="_user" 
                placeholder="Indica tu Usuario" 
                required
                   value="luis"
            />
        </div>
        
        <div class="form-group">
            <label for="_password">Contras&ntilde;a</label>
            <input 
                   type="password" 
                   class="form-control" 
                   id="_password" 
                   name="_password" 
                   placeholder="Indica tu Contrase&ntilde;a"
                   required
                   value="demo123#"
            />
        </div>

        <button class="btn btn-primary btn-block" type="submit">Entrar</button>
    </form>
    @{ if (TempData["error"] != null)
        {
            <div class="alert alert-danger margin-top-3" role="alert">
                @TempData["error"]
            </div>
        }
    }
</div>
