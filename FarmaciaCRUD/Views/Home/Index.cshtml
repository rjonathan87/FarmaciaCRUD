@{
    ViewBag.Title = "Lista Medicamentos";
}

<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>


@if(ViewBag.listaMedicamentos.Count > 0)
{
    <table class="table table-striped table-hover" id="tblMedicamentos">
        <thead>
            <tr>
                <td colspan="2"></td>
                <td class="pull-right">
                    <button type="button"
                            class="btn btn-success"
                            onclick="location.href='@Url.Action( "Agregar","Home")'; return false;">
                        Agregar
                    </button>
                </td>
            </tr>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var medicamento in ViewBag.ListaMedicamentos)
            {
                <tr>
                    <td>@medicamento.IdMedicamento</td>
                    <td>@medicamento.Nombre</td>
                    <td class="text-center">
                        <button 
                                type="button" 
                                class="btn btn-info"
                                onclick="location.href='@Url.Action( "Editar","Home", 
                                                       new {  
                                                           IdMedicamento = medicamento.IdMedicamento 
                                                       })'; return false;"
                        >Editar</button>
                        <button 
                                type="button" 
                                class="btn btn-danger"
                                onclick="
    if (confirm('Está seguro de liminar?')) {
    location.href = '@Url.Action( "Eliminar","Home", 
                                    new {  
                                        IdMedicamento = medicamento.IdMedicamento 
                                    })';
    }
    return false;
                                "
                                >Eliminar</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}