@{
    ViewBag.Title = "Lista de Usuarios";
}

<h2>@ViewBag.Title.</h2>


@if (ViewBag.listaUsuarios.Count > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Fecha de Creación</th>
                <th>Usuario</th>
                <th>Contraseña</th>
                <th>Perfil</th>
                <th>Estatus</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var usuario in ViewBag.listaUsuarios)
            {
                <tr>
                    <td>@usuario.IdUsuario</td>
                    <td>@usuario.Nombre</td>
                    <td>@usuario.FechaCreacion</td>
                    <td>@usuario.User</td>
                    <td>@usuario.Password</td>
                    <td>@usuario.IdPerfil</td>
                    <td>@usuario.Estatus</td>
                </tr>
            }
        </tbody>
    </table>
}